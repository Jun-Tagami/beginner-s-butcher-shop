<%= render "shared/header" %>
<div class="main">
  <div class="main2">
    <div class="beef">
      <h1><b>商品一覧</b></h1>
      <div class='item-contents'>
        <ul class="item-lists">
          <% @items.each do |item| %>
            <li class='list'>
              <%= form_with model: @item, url: new_order_path, class: 'item-main', local: true do |f| %>
                <%= link_to item_path(item.id), method: :get do %>
                  <div class='item-img-content'>
                    <%= image_tag item.image.variant(resize: '250x250'), class: "item-img" if item.image.attached? %>
                  </div>
                <% end %>
                <div class='item-info'>
                  <h3 class='item-name'>
                    <%= item.name %>
                  </h3>
                  <div class='item-price'>
                    <span><%= item.amount %></span>
                    <span><%= item.price %>円</span>
                  </div>
                  <div class="price-content">
                    <div class="price-text">
                      <span>数量</span>
                      <span class="indispensable">必須</span>
                    </div>
                    <%= f.collection_select(:reserve_amount, ReserveAmount.all,:id, :name, {}, {class:"select-box", id:"prefecture"}) %> 
                  </div>
                  <div class="reserve-btn-contents">
                    <%= f.hidden_field :item_id, value: item.id %> 
                    <%= f.submit '購入画面に進む'%> 
                    <%# <%= link_to "購入画面に進む", new_order_path(item_id: item.id) ,class:"item-red-btn"%>  
                  </div>
                </div>
              <% end  %>
            </li>
          <% end  %>
        </ul>
      </div>
    </div>
  </div>
</div>
<%= render "shared/footer" %>

