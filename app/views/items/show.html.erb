<%= render "shared/header" %>

<%# 商品の概要 %>
<div class="item-show">
  <div class="item-box">
    <h2 class="name">
      <%= @item.name %>
    </h2>
    <div class="item-img-content">
      <%= image_tag @item.image ,class:"item-box-img" %>
    </div>
    <div class="item-price-box">
      <span class="item-price">
        ¥ <%= @item.price %>
      </span>
    </div>
     <%# 数量記入欄（kg）入れる
     JavaScriptで金額自動計算入れる
     予約ボタン入れる %>

    <div class="item-explain-box">
      <span><%= @item.detail %></span>
    </div>
    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-item">産地</th>
          <td class="detail-value"><%= @item.locality.name %></td>
        </tr>
        <tr>
          <th class="detail-item">消費期限</th>
          <td class="detail-value"><%= @item.expiry_date.name %></td>
        </tr>
        <tr>
          <th class="detail-item">保存方法</th>
          <td class="detail-value"><%= @item.preservation.name %></td>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
  <%# /商品の概要 %>

<%= render "shared/footer" %>
