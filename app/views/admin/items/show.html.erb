<header>
  <div class="heading">
    <%= link_to image_tag("logo2.jpg", class: :title2), owners_dashboard_path %>
  </div>
</header>
<%# 商品の概要 %>
<div class="item-show">
  <div class="item-box">
    <h1>商品内容</h1>
    <div class="item-img-content">
      <%= image_tag @item.image ,class:"item-box-img" %>
    </div>
    <h2 class="name">
      商品名：　<%= @item.name %>
    </h2>
    <div class="item-price-box">
      <h2 class="item-price2">
        価格：　¥ <%= @item.price %>
      </h2>
    </div>
     <%# 数量記入欄（kg）入れる
     JavaScriptで金額自動計算入れる
     予約ボタン入れる %>

    <div class="item-explain-box">
      <h4>商品詳細</h4>
      <span><%= @item.detail %></span>
    </div>
      <table class="detail-table2">
        <tbody>
          <tr>
            <th class="detail-item2">カテゴリー</th>
            <td class="detail-value2"><%= @item.category.name %></td>
          </tr>
          <tr>
            <th class="detail-item2">産地</th>
            <td class="detail-value2"><%= @item.locality %></td>
          </tr>
          <tr>
            <th class="detail-item2">消費期限</th>
            <td class="detail-value2"><%= @item.expiry_date %></td>
          </tr>
          <tr>
            <th class="detail-item2">保存方法</th>
            <td class="detail-value2"><%= @item.preservation %></td>
          </tr>
        </tbody>
      </table>
    <div class="btn">
      <%= link_to "編集", edit_admin_item_path, method: :get, class: :edit %>
      <%= link_to "削除", admin_item_path, method: :delete, class: :destroy %>
    </div>
    <%=link_to 'もどる', admin_items_path, class:"back-btn2" %>
  </div>
</div>
<%# /商品の概要 %>